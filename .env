# Flask configuration
SECRET_KEY=your_random_secret_key_here
PERMANENT_SESSION_LIFETIME=3600  # Session lifetime in seconds (e.g., 3600s = 1 hour)

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION_NAME=ap-south-1
SNS_TOPIC_ARN=your_sns_topic_arn_here

# Email Configuration (Gmail SMTP for example)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email_here@gmail.com
SENDER_PASSWORD=your_email_password_here
ENABLE_EMAIL=True

# DynamoDB Table Names (for AWS integration)
USERS_TABLE_NAME=MedTrackUsers
DOCTORS_TABLE_NAME=MedTrackDoctors
PATIENTS_TABLE_NAME=MedTrackPatients
APPOINTMENTS_TABLE_NAME=MedTrackAppointments
DIAGNOSIS_TABLE_NAME=MedTrackDiagnosis
NOTIFICATIONS_TABLE_NAME=MedTrackNotifications

# Enable/Disable Features
ENABLE_SNS=True  # Enable or Disable SNS Notifications (True/False)
ENABLE_EMAIL=True  # Enable or Disable Email Notifications (True/False)

# Optional: if you're using local development (mocking DynamoDB), leave AWS keys empty
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
